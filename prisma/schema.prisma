generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql" // or your specific database provider
  url      = env("DATABASE_URL")
}

model User {
  id          String   @default(cuid()) @id
  username    String   @unique
  password    String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pixels      Pixel[]  @relation("UserPixels")
  pixelNumber Int
}

model Pixel {
  id        String   @default(cuid()) @id
  x         Int
  y         Int
  color     String
  userId    String
  user      User     @relation(fields: [userId], references: [id], name: "UserPixels")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([x, y], name: "x_y")

}